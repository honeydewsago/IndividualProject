<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/green_medium" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/green_medium_dark" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/green_medium" />
        </shape>
    </item>
</selector>
